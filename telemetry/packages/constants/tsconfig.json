{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "esnext",
    "lib": ["esnext"],
    "importHelpers": true,
    "sourceMap": true,
    "rootDir": "./src",
    "noEmit": true,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "preserveWatchOutput": true,
    "skipLibCheck": true,
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}